	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.cenicafe</groupId>
	<artifactId>IniciativasPortlet</artifactId>
	<packaging>war</packaging>
	<name>IniciativasPortlet</name>
	<version>1</version>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.3</version>
				<configuration>
					<encoding>UTF-8</encoding>
					<source>11</source>
					<target>11</target>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.3</version>
				<configuration>
					<filteringDeploymentDescriptors>true</filteringDeploymentDescriptors>
				</configuration>
			</plugin>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>copy_package</id>
						<phase>install</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<tasks>
								<delete>
									<fileset
										dir="../../liferay-ce-portal-7.2.0-ga1/osgi/war"
										includes="IniciativasPortlet-1.war" />
								</delete>
								<copy file="target/IniciativasPortlet-1.war"
									todir="../../liferay-ce-portal-7.2.0-ga1/deploy" />
							</tasks>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<repositories>
		<repository>
			<id>plord-snapshot</id>
			<name>Local nexus cache repository</name>
			<url>http://downloads.fluency.kabira.com/repositories/snapshots</url>
		</repository>
	</repositories>
		
